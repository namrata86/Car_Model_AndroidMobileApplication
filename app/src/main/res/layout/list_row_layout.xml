<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"    android:layout_height="50dp"
        android:id="@+id/majorImage"   android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="4dp"     android:layout_marginRight = "20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"    android:layout_height="50dp"
        android:text="Large Text"     android:id="@+id/majorItem"
        android:gravity="bottom"  android:layout_marginTop="10dp"
        android:textSize="25sp" />


</LinearLayout>